{
  "name": "mmo-fes-reference-data-reader",
  "version": "1.10.0",
  "description": "",
  "scripts": {
    "start-debug": "node --inspect ./dist/start.js",
    "test": "cross-env JEST_JUNIT_OUTPUT_DIR=test-results JEST_JUNIT_OUTPUT_NAME=test-results.xml NODE_ENV=test jest test/ --coverage --ci",
    "test:ci": "cross-env JEST_JUNIT_OUTPUT_DIR=test-results JEST_JUNIT_OUTPUT_NAME=junit.xml NODE_ENV=test jest --runInBand --watchAll=false --reporters=default --reporters=jest-junit --coverage --ci",
    "test:watch": "cross-env JEST_JUNIT_OUTPUT_DIR=test-results JEST_JUNIT_OUTPUT_NAME=test-results.xml NODE_ENV=test jest --runInBand test/ --coverage --ci --watch",
    "start": "cross-env NODE_ENV=development nodemon -w src/ -x ts-node src/start.ts",
    "debug:start": "cross-env NODE_ENV=development npm-run-all build start-debug --print-label",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "commitLint": "eslint . --ext .ts --max-warnings=0"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "~22.13.1",
    "npm": "~10.9.2"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.11",
    "@types/hapi": "^18.0.14",
    "@types/jest": "^29.5.12",
    "@types/node": "20.12.11",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "babel-jest": "^29.7.0",
    "cross-env": "7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-jest": "28.3.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-junit": "16.0.0",
    "lint-staged": "15.4.3",
    "mongodb-memory-server": "9.2.0",
    "nodemon": "^3.1.0",
    "npm": "^10.9.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@azure/msal-node": "^2.8.0",
    "@azure/service-bus": "^7.9.4",
    "@azure/storage-blob": "12.18.0",
    "@hapi/basic": "^7.0.2",
    "@hapi/hapi": "^21.3.9",
    "ajv": "8.13.0",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "applicationinsights": "2.9.5",
    "applicationinsights-native-metrics": "0.0.10",
    "axios": "^1.6.8",
    "bunyan": "1.8.15",
    "cryptr": "6.3.0",
    "csvtojson": "2.0.10",
    "dotenv": "^16.4.5",
    "joi": "^17.13.1",
    "json2csv": "^5.0.7",
    "lodash": "^4.17.21",
    "mingo": "6.4.15",
    "minimist": "^1.2.8",
    "mmo-shared-reference-data": "1.2.0-alpha.7",
    "moment": "^2.30.1",
    "mongodb": "6.6.1",
    "mongoose": "^8.3.4",
    "node-cron": "^3.0.3",
    "qs": "^6.12.1",
    "utf8-bytes": "0.0.1"
  },
  "jest": {
    "moduleNameMapper": {
      "^axios/": "axios/dist/node/axios.cjs"
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "js",
      "json"
    ],
    "testRegex": "/test/.*\\.(tsx|ts|js)$",
    "testPathIgnorePatterns": [
      "/test/mockData.js"
    ],
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 97,
        "branches": 92,
        "functions": 97,
        "lines": 97
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "npm test --watchAll=false --findRelatedTests --bail"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
